<h1>
  <%= @movie.title %>
  <small>
    <!-- <a href="/movies/<%= @movie.id %>/edit">Edit This Movie</a> -->
    <%= link_to "Edit This Movie", edit_movie_path(@movie.id) %>
    <%= link_to "Delete This Movie", movie_path(@movie.id), :method => :delete %>
  </small>
</h1>

<div class="details">

  <p><%= image_tag @movie.image_url, class: 'pull-right' %></p>

  <p><strong>Directed By: </strong>
    <%= link_to @movie.director.name, "/directors/#{@movie.director.id}" %>
  </p>

  <p><strong>Released:</strong> <%= @movie.year %></p>
  <p><strong>Plot:</strong> <%= @movie.plot %></p>


  <p><strong>Actors: </strong></p>

  <ul>
    <% @movie.actors.each do |actor| %>
      <li><%= link_to actor.name, "/actors/#{actor.id}" %></li>
    <% end %>
  </ul>

</div>
